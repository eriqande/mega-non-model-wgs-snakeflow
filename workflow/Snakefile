rule all:
    input:
        #expand("results/bqsr-round-{bq}/genomics_db/chromosomes/{c}", c=chromosomes.chrom),
        #expand("results/bqsr-round-{bq}/genomics_db/scaffold_groups/{s}", s=unique_scaff_groups),
